@import 'nib'
@import 'nib/gradients'

* 
  margin: 0px
  padding: 0px 

body
  padding:0px
  margin:0px
  width: 100%
  min-height:450px
  height:100%
  // background-size:cover; 
  // background-image:url('/img/bk.png')
  font-size: 14px
  color: #000
  overflow-x: hidden
  overflow-y: scroll
li 
  text-decoration:none
ul 
  list-style:none;

header
  height:50px
  background: #444
  width:100%
  position:fixed
  z-index:99
.header__h2
  color:#e0e0e0
  font-size:20px
  text-align:center
  line-height:2.5em
.header__follow
  background: red
  color:#fff
  position: absolute
  padding: 10px
  top: 8px
  right: 8px
  text-decoration:none
#map
  position:absolute
  top:0
  left:0
  width:100%
  height:100%

.app__need 
  position:absolute
  top:0px
  left:0px
  height:200px
  width:100px
  background:#fff