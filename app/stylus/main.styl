@import 'nib'
@import 'nib/gradients'

* 
  margin: 0px
  padding: 0px 

body
  padding:0px
  margin:0px
  width: 100%
  min-height:450px
  height:100%
  // background-size:cover; 
  // background-image:url('/img/bk.png')
  font-size: 14px
  color: #000
  overflow-x: hidden
  overflow-y: scroll
li 
  text-decoration:none
ul 
  list-style:none;

header
  height:50px
  background: #444
  width:100%
  position:fixed
  z-index:99
.header__h2
  color:#e0e0e0
  font-size:20px
  text-align:center
  line-height:2.5em
.header__follow
  background: red
  color:#fff
  position: absolute
  padding: 10px
  top: 8px
  right: 8px
  text-decoration:none
#map
  position:absolute
  top:0
  left:0
  width:100%
  height:100%

.app__need 
  position:absolute
  top:0px
  right:0px
  height:100%
  width:250px
  box-sizing:border-box
  padding-left:10px
  padding-right:10px

  // background:#fff
  ul li
    width: 100%
    margin-top:10px
    height: 200px
    background: #fff

footer
  width:100%
  height:50px
  background:#444
  z-index:999
  position:fixed
  bottom:0
.footer__font
  width:100%
  box-sizing:border-box
  line-height:40px
  text-align:center
  font-size:20px
  padding:5px
  color:#eee
.g0vmsg
  color:yellow
.msginput__frame
  width:400px
  height:40px
  top:50%
  left:50%
  margin-top:-20px
  position:absolute
  // background:#fff
  z-index:99
  margin-left:-200px
  box-sizing:border-box
  padding:10px
.msginput__frame::before
  pointer-events:none
  opacity:.3
  background:#fff
  content:''
  position:absolute
  top:0
  left:0
  width:100%
  height:100%  
.msginput__frame input
    width:260px